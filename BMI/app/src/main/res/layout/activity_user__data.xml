<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.walee.bmi.User_Data">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:ems="10"
            android:hint="Name (Alphabets and space only)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email  Address (Must contain @ and . )"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/txtDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="/0123456789"
            android:ems="10"
            android:hint="Date Of Birth (mm/dd/yyyy)"
            android:inputType="date" />

        <EditText
            android:id="@+id/txtHCN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789"
            android:ems="10"
            android:hint="Health Card Number (Integer number only)"
            android:inputType="number" />

        <EditText
            android:id="@+id/textUserPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
            android:ems="10"
            android:hint="Password ( minimum 4 Alphanumeric)"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnconfirmUserData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickConfirmUserData"
            android:text="Confirm User Information" />

        <Button
            android:id="@+id/LogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickLogout"
            android:text="LogOut"
            tools:text="Log Out" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>

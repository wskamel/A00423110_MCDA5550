<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.walee.bmi.BMIRecordsList">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/btnDeleteRecords"
            android:layout_width="199dp"
            android:layout_height="54dp"
            android:layout_below="@+id/layoutBMIList"
            android:layout_centerHorizontal="true"
            android:onClick="clickDeleteRecords"
            android:text="Delete Records"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="387dp" />

        <Button
            android:id="@+id/BtnReturnToMenu"
            android:layout_width="199dp"
            android:layout_height="54dp"
            android:layout_alignLeft="@+id/btnDeleteRecords"
            android:layout_alignStart="@+id/btnDeleteRecords"
            android:layout_below="@+id/btnDeleteRecords"
            android:onClick="clickReturnToMenu"
            android:text="Return To Menu"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="441dp" />

        <TextView
            android:id="@+id/txtHeaderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtHeaderBMI"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_weight="1"
            android:text="Date"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/txtHeaderHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnDeleteRecords"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btnDeleteRecords"
            android:layout_weight="1"
            android:text="Height"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/txtHeaderWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="Weight"
            tools:layout_editor_absoluteX="204dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/txtHeaderBMI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnDeleteRecords"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/btnDeleteRecords"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:text="BMI"
            tools:layout_editor_absoluteX="298dp"
            tools:layout_editor_absoluteY="0dp" />

        <ListView
            android:id="@+id/layoutBMIList"
            android:layout_width="390dp"
            android:layout_height="330dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtHeaderDate"
            android:layout_marginTop="12dp"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="54dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

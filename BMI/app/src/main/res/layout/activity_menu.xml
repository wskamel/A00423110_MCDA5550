<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.walee.bmi.Menu">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnCalcBMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickCalcBMI"
            android:text="Enter new BMI Record" />

        <Button
            android:id="@+id/btnBMIRecordlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickBMIRecordlist"
            android:text="BMI Record List" />

        <Button
            android:id="@+id/btnlogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickLogout"
            android:text="LogOut"
            tools:text="Log Out" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
